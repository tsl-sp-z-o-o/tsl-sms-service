@model List<TslWebApp.Models.SmsMessage>

@{
    ViewData["Title"] = "SMS sending view";
}

<h2>SMS Messages sending progress</h2>
@await  Html.PartialAsync("_MessageView")
@if (Model != null) {
<div class="table">
    <div class="row table-header-row pb-3">
        <div class="col-sm-2">
            @Html.DisplayNameFor(model => model[0].Id)
        </div>
        <div class="col-sm-5">
            @Html.DisplayNameFor(model => model[0].Content)
        </div>
        <div class="col-sm-2">
            @Html.DisplayNameFor(model => model[0].PhoneNumber)
        </div>
        <div class="col-sm-2">
            Options
        </div>
    </div>
    @foreach (var item in Model)
    {
<div class="row">
    <div class="col-sm-2">
        <p>@item.Id</p>
    </div>
    <div class="col-sm-5">
        <p>@item.Content</p>
    </div>
    <div class="col-sm-2">
        <p>@item.PhoneNumber</p>
    </div>
    <div class="col-sm-2">
        <a asp-action="Cancel" asp-route-id="@item.Id">
            <i class="material-icons">
                cancel
            </i>
        </a>
    </div>
    <div class="col-sm-12">
        <div class="progress">
            <div id="messageSendProgress-@item.Id" class="progress-bar progress-bar-striped" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%"></div>
        </div>
    </div>
</div>
    }
</div>
}
